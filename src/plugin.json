{
    "sdk": 6,
    "version": 1,
    "name": "Extra Connectors",
    "id": "extra-connectors",
    "plugin_start_cmd": "\"%TP_PLUGIN_FOLDER%TouchPortal-Extra-Connectors\\TouchPortal-Extra-Connectors.exe\"",
    "configuration": {
        "colorDark": "#333333",
        "colorLight": "#555555"
    },
    "settings": [],
    "categories": [
        {
            "id": "extra-connectors",
            "name": "Extra Connectors",
            "actions": [
                {
                    "id": "extra-connectors.keyboard-lock-state.action",
                    "prefix": "Extras",
                    "name": "Set Lock State",
                    "type": "communicate",
                    "format": "{$extra-connectors.keyboard-lock-state.action-value$} Keyboard Lock",
                    "tryInline": true,
                    "hasHoldFunctionality": false,
                    "data": [
                        {
                            "id": "extra-connectors.keyboard-lock-state.action-value",
                            "type": "choice",
                            "label": "Action",
                            "default": "Toggle",
                            "valueChoices": [
                                "Toggle",
                                "Enable",
                                "Disable"
                            ]
                        }
                    ]
                }
            ],
            "events": [
                {
                    "id": "extra-connectors.keyboard-lock-state.event",
                    "name": "Keyboard Lock State Changed",
                    "format": "When Keyboard $val",
                    "type": "communicate",
                    "valueType": "choice",
                    "default": "",
                    "valueChoices": [
                        "Locked",
                        "Unlocked"
                    ],
                    "valueStateId": "extra-connectors.keyboard-lock-state.stated"
                }
            ],
            "states": [
                {
                    "id": "extra-connectors.keyboard-lock-state.state",
                    "type": "choice",
                    "desc": "Keyboard Lock State",
                    "default": "",
                    "valueChoices": [
                        "Locked",
                        "Unlocked"
                    ]
                }
            ]
        }
    ]
}